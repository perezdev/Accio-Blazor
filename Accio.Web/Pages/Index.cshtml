@page
@model IndexModel
@{
    ViewData["Title"] = "Accio Harry Potter TCG Search";
    Layout = null;
}

@using System.Linq
@using Accio.Business.Models.ImageModels

<!DOCTYPE html>

@{
    var card1 = @Model.RandomCards[0];
    var card2 = @Model.RandomCards[1];
    var card3 = @Model.RandomCards[2];

    var firstImage = Model.RandomCards[0].Images.Single(x => x.Size == ImageSizeType.Small);
    var secondImage = Model.RandomCards[1].Images.Single(x => x.Size == ImageSizeType.Small);
    var thirdImage = Model.RandomCards[2].Images.Single(x => x.Size == ImageSizeType.Small);
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <meta name="description" content="A fast, magical Harry Potter Trading Card Game search." />
    <meta property="og:site_name" content="Accio Harry Potter TCG Search" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Accio Harry Potter TCG Search" />
    <meta property="og:description" content="A fast, magical Harry Potter Trading Card Game search." />
    <meta property="og:url" content="http://accio.cards/" />

    <link href="https://unpkg.com/tippy.js@6/themes/light.css" />
    <link rel="stylesheet" href="https://unpkg.com/tachyons/css/tachyons.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" />
    <link href="~/css/animate.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/izimodal/1.5.1/css/iziModal.min.css" rel="stylesheet" />
    <link href="~/css/accio.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <div id="main" class="w-100 ph0-ns ph3 relative">
        <div id="homeSearch" class="mw8 center">
            <div id="accioLogo">
                <?xml version="1.0" encoding="utf-8" ?>
